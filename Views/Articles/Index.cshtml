@model IEnumerable<ContentPortal.Models.Article>
@{
    ViewData["Title"] = "Статьи";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@ViewData["Title"]</h2>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <a asp-action="Create" class="btn btn-primary">Создать статью</a>
    }
</div>

<!-- Поиск и фильтры -->
<div class="row mb-4">
    <div class="col-md-6">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="Поиск по заголовку и содержанию..." value="@ViewData["CurrentFilter"]" />
                <button class="btn btn-outline-secondary" type="submit">Поиск</button>
                @if (ViewData["CurrentFilter"] != null)
                {
                    <a asp-action="Index" class="btn btn-outline-danger">Сбросить</a>
                }
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <select name="categoryId" class="form-select">
                    <option value="">Все категории</option>
                    @foreach (var cat in ViewBag.Categories as List<ContentPortal.Models.Category>)
                    {
                        <option value="@cat.Id" selected="@(ViewData["CurrentCategory"]?.ToString() == cat.Id.ToString())">
                            @cat.Name
                        </option>
                    }
                </select>
                <button class="btn btn-outline-secondary" type="submit">Фильтр</button>
            </div>
        </form>
    </div>
</div>

<!-- Список статей -->
@if (Model.Any())
{
    <div class="row">
        @foreach (var article in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(article.ImagePath))
                    {
                        <img src="@article.ImagePath" class="card-img-top" alt="@article.Title" style="height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="text-white opacity-50" viewBox="0 0 16 16">
                                <path d="M6.002 5.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                                <path d="M2.002 1a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2h-12zm12 1a1 1 0 0 1 1 1v6.5l-3.777-1.947a.5.5 0 0 0-.577.093l-3.71 3.71-2.66-1.772a.5.5 0 0 0-.63.062L1.002 12V3a1 1 0 0 1 1-1h12z"/>
                            </svg>
                        </div>
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@article.Title</h5>
                        <p class="card-text flex-grow-1" style="
                            overflow: hidden;
                            display: -webkit-box;
                            -webkit-line-clamp: 3;
                            -webkit-box-orient: vertical;
                            line-height: 1.5em;
                            max-height: 4.5em;">
                            @article.Content
                        </p>
                        <div class="mt-3">
                            @if (article.Category != null)
                            {
                                <span class="badge bg-primary mb-2">@article.Category.Name</span>
                            }
                            <p class="text-muted small mb-3">
                                Автор: @(article.User?.FullName ?? article.User?.Email ?? "Аноним")<br />
                                @article.PublishedAt.ToString("dd.MM.yyyy HH:mm")
                            </p>
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@article.Id" class="btn btn-sm btn-outline-primary">Подробнее</a>
                                @if (User.Identity?.IsAuthenticated == true && article.UserId == User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier))
                                {
                                    <a asp-action="Edit" asp-route-id="@article.Id" class="btn btn-sm btn-outline-secondary">Изменить</a>
                                    <a asp-action="Delete" asp-route-id="@article.Id" class="btn btn-sm btn-outline-danger">Удалить</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        Статьи не найдены.
        @if (User.Identity?.IsAuthenticated == true)
        {
            <a asp-action="Create">Создайте первую статью!</a>
        }
    </div>
}
