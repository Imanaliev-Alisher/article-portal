@model ContentPortal.Models.Category
@{
    ViewData["Title"] = Model.Name;
}

<h2>@Model.Name</h2>

<div class="mb-4">
    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <p>@Model.Description</p>
    }
</div>

@if (User.Identity?.IsAuthenticated == true)
{
    <div class="mb-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Изменить</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Удалить</a>
    </div>
}

<h4 class="mt-4">Статьи в этой категории</h4>

<div class="row">
    @if (Model.Articles.Any())
    {
        @foreach (var article in Model.Articles)
        {
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id">
                                @article.Title
                            </a>
                        </h5>
                        <p class="text-muted small">@article.PublishedAt.ToString("dd.MM.yyyy")</p>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <p class="text-muted">В этой категории пока нет статей.</p>
        </div>
    }
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>
