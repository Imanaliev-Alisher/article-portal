@model IEnumerable<ContentPortal.Models.Category>
@{
    ViewData["Title"] = "Категории";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@ViewData["Title"]</h2>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <a asp-action="Create" class="btn btn-primary">Создать категорию</a>
    }
</div>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var category in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        <p class="card-text">@category.Description</p>
                        <p class="text-muted small">Статей: @category.Articles.Count</p>
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">Подробнее</a>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-secondary">Изменить</a>
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">Удалить</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <p class="text-muted">Категории пока не созданы.</p>
        </div>
    }
</div>
