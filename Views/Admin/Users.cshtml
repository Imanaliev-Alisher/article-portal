@model IEnumerable<ContentPortal.Models.ApplicationUser>
@{
    ViewData["Title"] = "Управление пользователями";
    var userRoles = ViewBag.UserRoles as Dictionary<string, List<string>>;
}

<h2>@ViewData["Title"]</h2>

<div class="card mt-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Полное имя</th>
                        <th>Роли</th>
                        <th>Дата регистрации</th>
                        <th>Подтвержден</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td>@(user.FullName ?? "—")</td>
                            <td>
                                @if (userRoles != null && userRoles.ContainsKey(user.Id))
                                {
                                    @foreach (var role in userRoles[user.Id])
                                    {
                                        <span class="badge bg-@(role == "Admin" ? "danger" : role == "Editor" ? "warning" : "secondary") me-1">@role</span>
                                    }
                                }
                            </td>
                            <td>@user.RegisteredAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @if (user.EmailConfirmed)
                                {
                                    <span class="badge bg-success">✓</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">✗</span>
                                }
                            </td>
                            <td>
                                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary" title="Редактировать">
                                    <i class="bi bi-pencil"></i> Роли
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Назад к панели</a>
</div>
