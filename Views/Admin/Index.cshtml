@{
    ViewData["Title"] = "Панель администратора";
    var stats = ViewBag.Stats;
}

<h2>@ViewData["Title"]</h2>

<div class="row mt-4">
    <div class="col-md-4 mb-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">Статьи</h5>
                <h2 class="display-4">@stats.TotalArticles</h2>
                <a asp-action="Articles" class="btn btn-light btn-sm">Управление</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">Категории</h5>
                <h2 class="display-4">@stats.TotalCategories</h2>
                <a asp-action="Categories" class="btn btn-light btn-sm">Управление</a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title">Пользователи</h5>
                <h2 class="display-4">@stats.TotalUsers</h2>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Users" class="btn btn-light btn-sm">Управление</a>
                }
            </div>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h5>Последние статьи</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Заголовок</th>
                        <th>Автор</th>
                        <th>Категория</th>
                        <th>Дата</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var article in stats.RecentArticles)
                    {
                        <tr>
                            <td>@article.Title</td>
                            <td>@(article.User?.FullName ?? article.User?.Email ?? "Аноним")</td>
                            <td>
                                @if (article.Category != null)
                                {
                                    <span class="badge bg-primary">@article.Category.Name</span>
                                }
                            </td>
                            <td>@article.PublishedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.Id" class="btn btn-sm btn-outline-primary">Просмотр</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a asp-action="Articles" class="btn btn-primary">Все статьи</a>
    </div>
</div>
