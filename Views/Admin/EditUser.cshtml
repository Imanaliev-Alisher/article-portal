@model ContentPortal.Models.EditUserViewModel

@{
    ViewData["Title"] = "Редактировать пользователя";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-gear"></i> Редактировать пользователя
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditUser" method="post">
                        <input type="hidden" asp-for="UserId" />
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" readonly />
                            <small class="text-muted">Email нельзя изменить</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Роли пользователя</label>
                            <div class="card">
                                <div class="card-body">
                                    @foreach (var role in Model.AllRoles)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" 
                                                   type="checkbox" 
                                                   name="SelectedRoles" 
                                                   value="@role" 
                                                   id="role_@role"
                                                   @(Model.CurrentRoles.Contains(role) ? "checked" : "") />
                                            <label class="form-check-label" for="role_@role">
                                                @if (role == "Admin")
                                                {
                                                    <span class="badge bg-danger">@role</span>
                                                    <span class="text-muted ms-2">Полный доступ ко всем функциям системы</span>
                                                }
                                                else if (role == "Editor")
                                                {
                                                    <span class="badge bg-warning">@role</span>
                                                    <span class="text-muted ms-2">Управление контентом и категориями</span>
                                                }
                                                else if (role == "User")
                                                {
                                                    <span class="badge bg-secondary">@role</span>
                                                    <span class="text-muted ms-2">Базовый пользователь, создание своих статей</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">@role</span>
                                                }
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                            <small class="text-muted">Выберите одну или несколько ролей для пользователя</small>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Сохранить
                            </button>
                            <a asp-action="Users" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
